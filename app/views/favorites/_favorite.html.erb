<% if logged_in? %>
  <% if !Favorite.exists?(user_id: current_user.id, company_id: company.id) %>
    <%= link_to company_favorites_path(company.id), method: :post, remote: true, class:"favorite-btn" do %>
      <i class="fas fa-star star-icon1"></i>
    <% end %>
    <span class="star-count1"><%= company.favorites.count %></span>
  <% else %>
    <%= link_to company_favorites_path(company_id: company.id, id: company.favorites[0].id), method: :delete, remote: true, class:"favorite-btn" do %>
      <i class="fas fa-star star-icon2"></i>
    <% end %>
    <span class="star-count2"><%= company.favorites.count %></span>
  <% end %>
<% end %>