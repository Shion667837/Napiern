<div class="container-fiuld reservation-show">
  <div class="row">
    <div class="col-md-12 user-view">
      <div class="user-view-box">
        <div class="update-contents">
          <div class="row">
            <label class="col-md-3" for="room">予約した部屋</label>
            <div class="col-md-9"><%= @reservation.room.name %></div>
          </div>
        </div>
        <div class="update-contents">
          <div class="row">
            <label class="col-md-3" for="room">開始日</label>
            <div class="col-md-9"><%= @reservation.start_date.strftime('%F') %></div>
          </div>
        </div>
        <div class="update-contents">
          <div class="row">
            <label class="col-md-3" for="room">終了日</label>
            <div class="col-md-9"><%= @reservation.end_date.strftime('%F') %></div>
          </div>
        </div>
        <div class="update-contents">
          <div class="row">
            <label class="col-md-3" for="room">価格</label>
            <div class="col-md-9"><%= @reservation.total_price %>円</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>