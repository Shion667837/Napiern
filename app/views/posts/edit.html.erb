<% provide(:title, "投稿編集") %>
<div class="user">
  <div class="user-form">
    <div class="user-form-box">
      <h3>投稿編集</h3>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @post, local: true) do |f| %>

            <h2> タイトル </h2>
            <%= f.label "タイトル", class: 'form-control' %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.label "概要", class: 'form-control' %>
            <%= f.text_area :body, class: 'form-control' %>

            <%= f.label "会社所在地", class: 'form-control' %>
            <%= f.text_field :place, class: 'form-control' %>

            <%= f.label "株価画像", class: 'form-control' %>
            <%= f.file_field :stockprice, class: 'form-control' %>

            <%= f.label "ビジネスモデル（複数選択可）" %>
            <%= f.file_field :images, multiple: true, class: "form-control" %>

            <%= f.submit "更新", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>