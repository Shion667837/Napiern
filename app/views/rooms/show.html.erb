<div class="container room-show">
  <div class="row">


    <div class="col-md-8">
      <img src="<%= @room.img %>" class="room-show-image" alt="部屋画像">
      <div class="room-show-detail">
        <div class="room-show-icon">
          <% if current_user.image_name? %>
            <%= image_tag current_user.image_name.url, class: "host-icon" %>
          <% else %>
            <%= image_tag "/user_images/default.png", class: "host-icon" %>
          <% end %>
        </div>
        <div class="room-show-prof">
          <p class="show-name"><%= @room.name %></p>
          <p class="show-place"><%= @room.place %></p>
        </div>
      </div>
      <p class="show-body"><%= @room.body %></p>
    </div>


    <div class="col-md-4">
      <div class="room-show-form">
        <%= form_for @reservation, url: "/rooms/#{@room.id}/reservations/confirm" do |f| %>
          <h3>¥<%= @room.price %> / 日</h3>
          <%= f.label "開始日" %>
          <%= f.date_field :start_date, class: "form-control" %>

          <%= f.label "終了日" %>
          <%= f.date_field :end_date, class: "form-control" %>

          <%= f.label "人数" %>
          <%= f.number_field :people, class: "form-control", value: 1  %>

          <%= f.submit "予約する", class: "btn btn-primary" %>
        <%end%>
      </div>
    </div>
  </div>
</div>
