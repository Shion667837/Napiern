<div class="top">
  <div class="top-main">
    <div class="container">
      <div class="top-form">
        <h3>Travelappでまだ体験したことのない旅に出よう</h3>
        <%= search_form_for @search, url: rooms_search_path do |f| %>
          <%= f.label :place, "エリア" %>
          <%= f.search_field :place_cont %>

          <%= f.submit "検索", class: "btn btn-primary" %>
        <% end %>

      </div>
    </div>
  </div>
  <div class="container">
    <div class="recome-area">
      <h3>おすすめのエリア</h3>
      <div class="row">
        <div class="area-items col-lg-3 col-6"><img class="area-img" src="/assets/tokyo.jpg">
          <%= link_to '東京', rooms_search_path(q: { place_cont: '東京' })%>
        </div>
        <div class="area-items col-lg-3 col-6"><img class="area-img" src="/assets/osaka.jpg">
          <%= link_to '大阪', rooms_search_path(q: { place_cont: '大阪' })%>
        </div>
        <div class="area-items col-lg-3 col-6"><img class="area-img" src="/assets/kyoto.jpg">
          <%= link_to '京都', rooms_search_path(q: { place_cont: '京都' })%>
        </div>
        <div class="area-items col-lg-3 col-6"><img class="area-img" src="/assets/sappolo.jpg">
          <%= link_to '札幌', rooms_search_path(q: { place_cont: '札幌' })%>
        </div>
      </div>
    </div>
  </div>
</div>
